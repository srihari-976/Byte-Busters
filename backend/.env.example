EMAIL_SERVICE=console
EMAIL_USER=dev@localhost
EMAIL_PASSWORD=not_needed_for_console_mode

# PRODUCTION OPTIONS (uncomment one when deploying):

# Option 1: Gmail (requires App Password)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your_email@gmail.com  
# EMAIL_PASSWORD=your_16_character_app_password

# Option 2: Outlook (easier setup)
# EMAIL_SERVICE=outlook
# EMAIL_USER=your_email@outlook.com
# EMAIL_PASSWORD=your_outlook_password

# Option 3: Yahoo
# EMAIL_SERVICE=yahoo
# EMAIL_USER=your_email@yahoo.com
# EMAIL_PASSWORD=your_yahoo_password

# Security
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=10

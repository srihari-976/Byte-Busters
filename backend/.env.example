# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=manufacturing_db
DB_USER=postgres
DB_PASSWORD=admin

# JWT Configuration  
JWT_SECRET=manufacturing_erp_super_secure_secret_key_2024_minimum_32_characters

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Configuration
